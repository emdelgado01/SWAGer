<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:dither="true">
            <solid android:color="#ccc" />

        </shape>
    </item>

    <item android:bottom="1dp">
        <shape
            android:shape="rectangle"
            android:dither="true"
            >
            <solid android:color="#f7f7f7" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />

        </shape>
    </item>
</layer-list>